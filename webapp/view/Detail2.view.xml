<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="app.SAPUI5MasterDetailTemplate.controller.Detail2" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{productName}" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<f:SimpleForm title="Product Details">
						<f:content>
							<Label text="Product ID"/>
							<Text text="{productId}"/>
							<Label text="Product Name"/>
							<Text text="{productName}"/>
						</f:content>
					</f:SimpleForm>
					<layout:VerticalLayout class="sapUiContentPadding">
						<Text text="Static Routes:"/>
						<Link text="Go to product 1-C" press="onToProduct1C"/>
						<Link text="Go to product 2-D" press="onToProduct2D"/>
					</layout:VerticalLayout>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>